<h1> {{post.title}} </h1>
{{#each posts as |post|}}
  <div class='row mb-4'>
    <div class='col-md-5'>
      <h1> {{title}} </h1>
      <div class="row">
      <h2>
        <a href='/post/{{post.id}}'>{{post.title}}</a>
      </h2>
      </div>
    </div>
    <div class='col-md-7'>
      <p>
        {{post.body}}
      </p>
      <p>Posted by {{post.user.user_id}} on {{format_date post.createdAt}}</p> 
     </div>
  </div>
{{/each}}