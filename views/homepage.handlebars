{{/if}} --}}

{{#each posts as |post|}}
  <div class='row mb-4'>
    <div class='col-md-5'>
      <h2>
        <a href='/post/{{post.id}}'>{{post.title}}</a>
      </h2>
    </div>
    <div class='col-md-7'>
      <p>
        {{post.body}}
      </p>
      <p>Posted by {{post.user.user_id}} on {{format_date post.date_posted}}</p> --}}
     </div>
  </div>
{{/each}}