<div>
  <div>
    <h2>Create a New Post</h2>

    <form class='new-post-form'>
      <div>
        <input type='text' id='post-title' name='post-title' placeholder='Enter your post title here' />
      </div>

      <div>
        <textarea id='post-content' name='post-content' placeholder='Enter your post content here'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit'>Submit your post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class='post-list'>
      <h2>Your posts:</h2>

      {{#each posts as |post|}}
        <div>
          <div>
            <h4><a href='/post/{{post.id}}'>{{post.title}}</a></h4>
          </div>
          <div>
            <button data-id='{{post.id}}'>Delete post</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/dashboard.js'></script>